mixin s-form()
	// start s-form
	+b.s-form.section.block-with-lazy#s-form&attributes(attributes)
		.container
		
				
			+form-wrap
				+b.section-title.text-center.text-white.d-none.d-md-block
					h2 Заказать ДИЗАЙН ПРОЕКТ 
				.row
					.col-md-6
						+input("Ваше имя")
							+icon('user')
						+input("Ваш телеофон",'tel')
							+icon('tel')
					.col
						+input("Текст сообщения",'textarea')
				.row.align-items-center
					.col
						+polite()
					.col-auto
						+e.INPUT.btn(type="submit" value="Заказать проект") 
	// end s-form